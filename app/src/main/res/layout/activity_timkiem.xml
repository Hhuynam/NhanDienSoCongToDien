<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/Frame_Up"
            android:layout_width="match_parent"
            android:layout_height="141dp"
            android:background="#4527A0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Text_TrangTImKiem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Trang tìm kiếm"
                    android:textAlignment="center"
                    android:textColor="#FFEBEE"
                    android:textSize="34sp" />

                <SearchView
                    android:id="@+id/TextBox_TimKiem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFF59D"
                    android:clickable="true"
                    android:contextClickable="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/NutNhan_TimKiem"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="Tìm" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/NutNhan_QuayLai"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Quay lại" />

                </LinearLayout>

            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/Frame_Down"
            android:layout_width="match_parent"
            android:layout_height="617dp"
            android:background="#00695C">

            <ImageView
                android:id="@+id/Frame_Image_TimKiem"
                android:layout_width="match_parent"
                android:layout_height="177dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Frame_Label_ImagePreview"
                app:srcCompat="@drawable/placeholder" />
        </FrameLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>